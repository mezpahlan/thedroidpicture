<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    card_view:cardUseCompatPadding="true"
    card_view:cardCornerRadius="8dp"
    android:layout_marginBottom="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/rss_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            tools:src="@drawable/logo_boston_globe" />

        <TextView
            android:id="@+id/rss_description"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:textSize="13sp"
            android:layout_toEndOf="@+id/rss_image"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:gravity="center_horizontal"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nulla vitae."
            android:layout_toRightOf="@+id/rss_image"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>